<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/concertName" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/title_bar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/concertName"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/image" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/concertName"
        android:layout_marginTop="10dp"
        android:id="@+id/artist" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/artist"
        android:id="@+id/time" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/time"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/artist"
        android:layout_marginLeft="5dp"
        android:id="@+id/date" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/city"
        android:layout_toEndOf="@+id/image"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/date"
        android:id="@+id/venue" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/country"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/date"
        android:layout_marginLeft="5dp"
        android:id="@+id/city" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/date"
        android:layout_alignParentEnd="true"
        android:id="@+id/country" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/genre"
        android:layout_below="@+id/country"
        android:layout_marginEnd="5dp"
        android:id="@+id/segment" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/country"
        android:layout_marginEnd="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/genre" />

</RelativeLayout>
